@page
@model hw.Pages.Projects.IndexModel
@{
    ViewData["Title"] = "Projects";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Projects</h1>
    <a class="btn btn-primary" asp-page="/Projects/Create">Create Project</a>
</div>

@if (!Model.Projects.Any())
{
    <div class="alert alert-info">
        No projects yet. <a asp-page="/Projects/Create">Create the first project.</a>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var project in Model.Projects)
        {
            <div class="col">
                <div class="card h-100 shadow-sm position-relative">
                    <div class="card-body">
                        <h5 class="card-title">@project.Name</h5>
                        <p class="card-text text-muted">@(!string.IsNullOrWhiteSpace(project.Description) ? project.Description : "No description provided.")</p>
                        <a asp-page="/Projects/Details" asp-route-id="@project.Id" class="stretched-link" aria-label="View project details"></a>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <div class="mb-2">
                            <small class="text-muted">Start: @project.StartDate.ToString("d")</small><br />
                            <small class="text-muted">End: @project.EndDate.ToString("d")</small>
                        </div>
                        <div class="d-flex gap-2 flex-wrap">
                            <a class="btn btn-outline-success btn-sm" asp-page="/Projects/AddTask" asp-route-id="@project.Id">Add Task</a>
                            <a class="btn btn-outline-primary btn-sm" asp-page="/Projects/Edit" asp-route-id="@project.Id">Edit</a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@project.Id" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
