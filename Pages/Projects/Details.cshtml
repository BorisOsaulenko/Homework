@page "{id:guid}"
@model hw.Pages.Projects.DetailsModel
@{
    ViewData["Title"] = "Project Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="mb-0">@Model.Project.Name</h1>
        <p class="text-muted mb-0">@Model.Project.Description</p>
    </div>
    <div class="btn-group">
        <a class="btn btn-outline-success" asp-page="/Projects/AddTask" asp-route-id="@Model.Project.Id">Add Task</a>
        <a class="btn btn-outline-primary" asp-page="/Projects/Edit" asp-route-id="@Model.Project.Id">Edit Project</a>
    </div>
</div>

<div class="mb-4">
    <span class="badge bg-secondary me-2">Start: @Model.Project.StartDate.ToString("D")</span>
    <span class="badge bg-secondary">End: @Model.Project.EndDate.ToString("D")</span>
</div>

<h2>Tasks</h2>

@if (!Model.Tasks.Any())
{
    <div class="alert alert-info">
        No tasks yet. <a asp-page="/Projects/AddTask" asp-route-id="@Model.Project.Id">Create a task</a>.
    </div>
}
else
{
    <div class="list-group">
        @foreach (var task in Model.Tasks)
        {
            <div class="list-group-item d-flex justify-content-between align-items-start">
                <div>
                    <h5 class="mb-1">@task.Name</h5>
                    <p class="mb-1 text-muted">@(!string.IsNullOrWhiteSpace(task.Description) ? task.Description : "No description provided.")</p>
                    <small>Status: @task.Status</small>
                </div>
                <div class="text-end">
                    <small class="text-muted">Due: @task.DueDate.ToString("d")</small>
                </div>
            </div>
        }
    </div>
}
